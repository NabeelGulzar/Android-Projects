<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.nabee.lab_18sep2017.ImageList">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="2">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:columnCount="2"
            android:rowCount="2">

            <ImageButton
                android:id="@+id/imageView"
                android:layout_width="189dp"
                android:layout_height="189dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:background="@color/colorPrimary"
                android:padding="0dp"
                android:paddingBottom="0dp"
                android:paddingEnd="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingStart="0dp"
                android:paddingTop="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/image5" />

            <ImageButton
                android:id="@+id/imageView2"
                android:layout_width="160dp"
                android:layout_height="138dp"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/image6" />

            <ImageButton
                android:id="@+id/imageView3"
                android:layout_width="187dp"
                android:layout_height="185dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/image7" />

            <ImageButton
                android:id="@+id/imageView4"
                android:layout_width="186dp"
                android:layout_height="186dp"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1"

                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/image8" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:layout_column="0"
            android:layout_gravity="bottom"
            android:layout_row="1"
            tools:layout_gravity="bottom">

            <Button
                android:id="@+id/btnHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#dfdfdf"
                android:fontFamily="serif"
                android:onClick="ContactUsClicked"
                android:text="Contact Us"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btnContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#dfdfdf"
                android:fontFamily="serif"
                android:onClick="AboutUsClicked"
                android:text="About Us"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btnGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="#dfdfdf"
                android:fontFamily="serif"
                android:onClick="GalleryClicked"
                android:text="Gallery"
                android:textSize="16dp" />
        </GridLayout>

    </GridLayout>

</LinearLayout>
