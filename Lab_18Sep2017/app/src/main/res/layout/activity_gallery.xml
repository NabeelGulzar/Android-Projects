<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.nabee.lab_18sep2017.ImageList">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="2">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="407dp"
            android:layout_column="0"
            android:layout_row="0"
            android:columnCount="2"
            android:rowCount="2">

            <ImageButton
                android:id="@+id/imageView"
                android:layout_width="189dp"
                android:layout_height="204dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:alpha="1"
                android:elevation="0dp"
                android:onClick="ShowDetailView"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/image5" />

            <ImageButton
                android:id="@+id/imageView2"
                android:layout_width="160dp"
                android:layout_height="138dp"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:alpha="0.5"
                android:onClick="ShowDetailView"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/image6" />

            <ImageButton
                android:id="@+id/imageView3"
                android:layout_width="187dp"
                android:layout_height="185dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:alpha="0.5"
                android:background="@android:color/transparent"
                android:onClick="ShowDetailView"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/image7" />

            <ImageButton
                android:id="@+id/imageView4"
                android:layout_width="186dp"
                android:layout_height="186dp"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:alpha="0.5"
                android:onClick="ShowDetailView"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/image8" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:layout_column="0"
            android:layout_row="1">

            <Button
                android:id="@+id/btnGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:fontFamily="serif"
                android:onClick="SetBackGround"
                android:text="Show Details"
                android:textSize="16dp"
                tools:layout_gravity="center" />
        </GridLayout>

    </GridLayout>

</LinearLayout>
