<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nabee.lab_18sep2017.ImageDetail">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="3">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="274dp"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0"
            android:layout_rowWeight="1"

            android:background="@drawable/image5"
            android:elevation="2dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            tools:layout_gravity="top|fill_horizontal" />

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="wrap_content"
            android:layout_height="189dp"
            android:layout_row="1"
            android:fontFamily="serif"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:layout_gravity="fill_horizontal" />

        <Button
            android:id="@+id/btnSetLayout"
            style="@android:style/Widget.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:background="#dfdfdf"
            android:elevation="0dp"
            android:fadingEdge="horizontal|vertical"
            android:fadingEdgeLength="5dp"
            android:fontFamily="serif"
            android:text="Set Background"
            android:textAllCaps="false"
            android:textSize="16dp" />
    </GridLayout>
</LinearLayout>
